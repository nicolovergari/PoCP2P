<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".NotLoggedFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
            android:src="@color/common_google_signin_btn_text_dark_disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView2"
            android:background="@android:color/holo_blue_light"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/rounded_container_bg">

        <TextView
                android:text="Utente non loggato"
                android:layout_width="146dp"
                android:layout_height="39dp"
                android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="124dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.549"/>
        <Button
                android:text="LOGIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/loginbtn" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintVertical_bias="0.06"/>
        <Button
                android:text="REGISTRATI"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/signupbtn"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/loginbtn" app:layout_constraintVertical_bias="0.074"
                android:layout_marginBottom="124dp"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>